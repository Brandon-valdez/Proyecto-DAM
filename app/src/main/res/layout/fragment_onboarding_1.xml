<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="25dp">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingBottom="50dp">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/Onboarding_count1"
        android:textColor="@color/terciario"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/btnSaltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:text="@string/Onboarding_exit"
        android:textColor="@color/secundario"
        android:textSize="16sp" />
  </LinearLayout>

  <ImageView
      android:id="@+id/imageView"
      android:layout_width="wrap_content"
      android:layout_height="288dp"
      android:contentDescription="@string/onboarding_image_description"
      android:src="@drawable/onboarding1"
      tools:ignore="ContentDescription" />

  <TextView
      android:id="@+id/textView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fontFamily="sans-serif"
      android:gravity="center"
      android:paddingTop="50dp"
      android:text="@string/Onboarding1_title"
      android:textSize="24sp"
      android:textStyle="bold" />

  <TextView
      android:id="@+id/textView2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:paddingTop="15dp"
      android:text="@string/Onboarding1_descripion1"
      android:textSize="16sp" />

  <TextView
      android:id="@+id/textView6"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="@string/Onboarding1_description2"
      android:textSize="16sp" />

  <LinearLayout
      style="?android:attr/buttonBarStyle"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="bottom"
      android:orientation="horizontal"
      android:paddingTop="16dp">

    <Button
        android:id="@+id/btnNext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:backgroundTint="@color/primario"
        android:minHeight="48dp"
        android:text="@string/Onboarding_btn2"
        android:textAlignment="center"
        app:icon="@drawable/ic_angle_right"
        app:iconGravity="textEnd"
        tools:ignore="ButtonStyle" />
  </LinearLayout>

</LinearLayout>
