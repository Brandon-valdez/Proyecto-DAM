<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/card_rounded_background">

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Información de Contacto"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/texto_oscuro"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Nombre del usuario -->
    <TextView
        android:id="@+id/tvDialogNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre Usuario"
        android:textSize="18sp"
        android:textColor="@color/primario"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Email Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_rounded_background"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_dialog_email"
                android:tint="@color/primario"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="14sp"
                android:textColor="@color/texto_oscuro"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvDialogEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="email@example.com"
            android:textSize="16sp"
            android:textColor="@color/texto_oscuro"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:textIsSelectable="true" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCopyEmail"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="Copiar Email"
            android:textColor="@color/white"
            app:backgroundTint="@color/primario"
            app:cornerRadius="8dp"
            app:icon="@android:drawable/ic_menu_edit"
            app:iconGravity="textStart"
            app:iconTint="@color/white" />

    </LinearLayout>

    <!-- Teléfono Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_rounded_background"
        android:padding="16dp"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/stat_sys_phone_call"
                android:tint="@color/primario"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teléfono"
                android:textSize="14sp"
                android:textColor="@color/texto_oscuro"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvDialogTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No disponible"
            android:textSize="16sp"
            android:textColor="@color/texto_oscuro"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:textIsSelectable="true" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCopyTelefono"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="Copiar Teléfono"
            android:textColor="@color/white"
            app:backgroundTint="@color/primario"
            app:cornerRadius="8dp"
            app:icon="@android:drawable/ic_menu_edit"
            app:iconGravity="textStart"
            app:iconTint="@color/white" />

    </LinearLayout>

    <!-- Botón Cerrar -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCerrar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Cerrar"
        android:textColor="@color/primario"
        app:backgroundTint="@color/white"
        app:cornerRadius="8dp"
        app:strokeColor="@color/primario"
        app:strokeWidth="2dp" />

</LinearLayout>

